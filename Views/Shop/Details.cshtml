@model Product
<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 text-center">
                <h2 class="breadcrumb-title">Детали о товаре</h2>
                <!-- breadcrumb-list start -->
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a>Магазин</a></li>
                    <li class="breadcrumb-item active">Детали о товаре</li>
                </ul>
                <!-- breadcrumb-list end -->
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- Product Details Area Start -->
<div class="product-details-area pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-12 col-xs-12 mb-lm-30px mb-md-30px mb-sm-30px">
                <!-- Swiper -->
                <div class="swiper-container zoom-top">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide zoom-image-hover">
                            @if (Model.Image != null)
                            {
                                var base64 = Convert.ToBase64String(Model.Image);
                                var imgSrc = string.Format("data:image/png;base64,{0}", base64);
                                <img class="img-responsive m-auto" src="@imgSrc" alt="">
                            }
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-6 col-sm-12 col-xs-12" data-aos="fade-up" data-aos-delay="200">
                <div class="product-details-content quickview-content ml-25px">
                    <h2>@Model.Name</h2>
                    <div class="pricing-meta">
                        <ul class="d-flex">
                            <li class="new-price">@Model.Price</li>
                        </ul>
                    </div>
                    <div class="stock mt-30px">
                        <span class="avallabillty">
                            Наличие: <span class="in-stock">
                                <i class="fa fa-check"></i>В наличии
                            </span>
                        </span>
                    </div>
                    <p class="mt-30px mb-0">
                        @Html.Raw(Model.Description)
                    </p>
                    <div class="pro-details-quality">
                        <div class="pro-details-cart">
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="add-cart">
                                Добавить в корзину
                            </a>
                        </div>
                    </div>
                    
                    </div>
                    <div class="payment-img">
                        <a ><img src="~/assets/images//icons/payment.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>