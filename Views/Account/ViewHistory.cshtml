@model List<Order>


<!-- breadcrumb-area start -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 text-center">
                <h2 class="breadcrumb-title">История заказов</h2>
                <!-- breadcrumb-list start -->
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a >Главная страница</a></li>
                    <li class="breadcrumb-item active">История заказов</li>
                </ul>
                <!-- breadcrumb-list end -->
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<div class="account-dashboard pt-100px pb-100px">
    <div class="container">
        <div class="row">
            <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                <div>
                    <h4>Заказы</h4>
                    <div class="table_page table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <th>Пользователь</th>
                                        <th>Почта</th>
                                    }

                                    <th>Дата заказа</th>
                                    <th>Продукт</th>
                                    <th>Кол-во</th>
                                    <th>Стоимость (Итог)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    var totalOrderPrice = order.OrderItems.Sum(item => item.Quantity * item.Price);
                                    <tr>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                                @if (order.User != null)
                                                {
                                                    @order.User.UserName
                                                }
                                            </td>
                                            <td>
                                                @if (order.User != null)
                                                {
                                                    @order.User.Email
                                                }
                                            </td>
                                        }
                                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>
                                            @foreach (var orderItem in order.OrderItems)
                                            {
                                                <div>@orderItem.Product.Name</div>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var orderItem in order.OrderItems)
                                            {
                                                <div>@orderItem.Quantity</div>
                                            }
                                        </td>
                                        <td>
                                            <div>@totalOrderPrice.ToString("C2")</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

